<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:listDivider">@drawable/divider</item>
        <!-- set windowActionBar to false in your theme to use a Toolbar instead -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>


    <style name="Main.Button.Theme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/colorAccent</item><!--正常状态下的颜色  -->
        <item name="colorControlHighlight">@color/btn_highlight_color</item><!--覆盖色，按下的颜色  -->
    </style>
    <style name="Login.Button.Theme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/colorPrimary</item><!--正常状态下的颜色  -->
        <item name="colorControlHighlight">@color/btn_highlight_color</item><!--覆盖色，按下的颜色  -->
    </style>
</resources>
